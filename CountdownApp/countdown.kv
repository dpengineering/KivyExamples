<MainScreen>:
    name: 'main'

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: start_button
        text: 'Start Timer'
        font_size: self.width * .18
        size_hint: .2, .1
        pos_hint: {"center_x": .5, "center_y":0.5}
        color: 0.9, 1, 0, 1
        on_press: root.start_timer()

    Slider:
        id: time_slider
        size_hint: .5, .1
        min: 1
        max: 10
        step: 1
        value: 1
        pos_hint: {"center_x": .5, "center_y":0.8}

    Label:
        text: str(time_slider.value)
        font_size: 50
        pos_hint: {"center_x": .5, "center_y":0.7}
        color: 0,0,0,1

<FinishScreen>:

    name: 'finish'
    FloatLayout:
        size_hint: None, None

    Label:
        text: "CONGRATS!"
        font_size: 50
        pos_hint: {"center_x": .5, "center_y":0.7}
        color: 0,0,0,1

    DPEAButton:
        id: test_button
        text:'Return To Main Screen'
        size_hint: .25, .1
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        color: 1, 0, 0, 1
        on_press: root.switch_screen()


